<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="@drawable/neon_glow_background">
    
    <TextView
        android:id="@+id/widget_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="18sp"
        android:textColor="@color/primary"
        android:fontFamily="@font/orbitron_bold"
        android:gravity="center"
        android:padding="4dp" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">
        
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="High Score"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:fontFamily="@font/orbitron" />
            
            <TextView
                android:id="@+id/widget_high_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="20sp"
                android:textColor="@color/accent_cyan"
                android:fontFamily="@font/orbitron_bold" />
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Level"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:fontFamily="@font/orbitron" />
            
            <TextView
                android:id="@+id/widget_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="20sp"
                android:textColor="@color/accent_magenta"
                android:fontFamily="@font/orbitron_bold" />
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lines"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:fontFamily="@font/orbitron" />
            
            <TextView
                android:id="@+id/widget_lines"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="20sp"
                android:textColor="@color/accent_yellow"
                android:fontFamily="@font/orbitron_bold" />
        </LinearLayout>
    </LinearLayout>
    
    <!-- Additional stats -->
    <TextView
        android:id="@+id/widget_total_lines"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total Lines: 0"
        android:textSize="12sp"
        android:textColor="@color/text_secondary"
        android:fontFamily="@font/orbitron"
        android:gravity="center"
        android:visibility="gone" />
    
    <TextView
        android:id="@+id/widget_games_played"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Games Played: 0"
        android:textSize="12sp"
        android:textColor="@color/text_secondary"
        android:fontFamily="@font/orbitron"
        android:gravity="center"
        android:visibility="gone" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        
        <Button
            android:id="@+id/widget_play_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="PLAY"
            android:textColor="@color/background_dark"
            android:background="@drawable/button_background"
            android:fontFamily="@font/orbitron_bold"
            android:layout_margin="4dp" />
        
        <ImageButton
            android:id="@+id/widget_refresh_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/ic_menu_rotate"
            android:background="@drawable/button_background"
            android:contentDescription="Refresh"
            android:layout_margin="4dp" />
    </LinearLayout>
    
</LinearLayout>