<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base styles hierarchy -->
    
    <!-- Base Theme -->
    <style name="Theme" />
    
    <!-- Base Widget -->
    <style name="Widget" />
    
    <!-- Base Widget.Material3 -->
    <style name="Widget.Material3" parent="Widget" />
    
    <!-- Base TextAppearance -->
    <style name="TextAppearance">
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <!-- Base TextAppearance.Material3 -->
    <style name="TextAppearance.Material3" parent="TextAppearance">
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <!-- Base ShapeAppearance -->
    <style name="ShapeAppearance" />
    
    <!-- Base ShapeAppearance.Material3 -->
    <style name="ShapeAppearance.Material3" parent="ShapeAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">0dp</item>
    </style>
    
    <!-- Theme.Material3 base -->
    <style name="Theme.Material3" parent="Theme">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/text_primary</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorOnSecondary">@color/text_primary</item>
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/text_primary</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorOnBackground">@color/text_primary</item>
        <item name="android:windowBackground">@color/background_dark</item>
    </style>
    
    <!-- Theme.Material3.DayNight -->
    <style name="Theme.Material3.DayNight" parent="Theme.Material3">
        <item name="android:windowBackground">@color/background_dark</item>
    </style>
    
    <!-- Text Appearances -->
    <style name="TextAppearance.Material3.DisplayLarge" parent="TextAppearance.Material3">
        <item name="android:textSize">57sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:lineHeight">64sp</item>
    </style>
    
    <style name="TextAppearance.Material3.HeadlineLarge" parent="TextAppearance.Material3">
        <item name="android:textSize">32sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:lineHeight">40sp</item>
    </style>
    
    <style name="TextAppearance.Material3.TitleLarge" parent="TextAppearance.Material3">
        <item name="android:textSize">22sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:lineHeight">28sp</item>
    </style>
    
    <style name="TextAppearance.Material3.BodyLarge" parent="TextAppearance.Material3">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.5</item>
        <item name="android:lineHeight">24sp</item>
    </style>
    
    <!-- Widget styles -->
    <style name="Widget.Material3.Button" parent="Widget.Material3">
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
    </style>
    
    <style name="Widget.Material3.Button.OutlinedButton" parent="Widget.Material3.Button">
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/button_background</item>
    </style>
    
    <style name="Widget.Material3.Button.TextButton" parent="Widget.Material3.Button">
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>
    
    <style name="Widget.Material3.CardView" parent="Widget.Material3" />
    
    <style name="Widget.Material3.CardView.Elevated" parent="Widget.Material3.CardView">
        <item name="android:elevation">1dp</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">1dp</item>
        <item name="cardBackgroundColor">@color/surface</item>
    </style>
    
    <style name="Widget.Material3.BottomSheet" parent="Widget.Material3">
        <item name="android:background">@drawable/bottom_sheet_background</item>
        <item name="android:paddingTop">8dp</item>
    </style>
    
    <!-- Shape Appearances -->
    <style name="ShapeAppearance.Material3.SmallComponent" parent="ShapeAppearance.Material3">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>
    
    <style name="ShapeAppearance.Material3.MediumComponent" parent="ShapeAppearance.Material3">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>
    
    <style name="ShapeAppearance.Material3.LargeComponent" parent="ShapeAppearance.Material3">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>
    
    <!-- Theme bases -->
    <style name="Theme.Material3.DayNight.NoActionBar" parent="Theme.Material3.DayNight">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/background_dark</item>
    </style>
    
    <style name="Theme.Material3.DayNight.Dialog" parent="Theme.Material3.DayNight">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    
    <style name="Theme.Material3.DayNight.BottomSheetDialog" parent="Theme.Material3.DayNight.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>
    
    <!-- Splash Screen Theme -->
    <style name="Theme.SplashScreen" parent="Theme">
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    
    <!-- TextAppearance.ModernTetris base -->
    <style name="TextAppearance.ModernTetris" parent="TextAppearance">
        <item name="android:fontFamily">@font/orbitron</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <!-- Window animation -->
    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>
</resources>