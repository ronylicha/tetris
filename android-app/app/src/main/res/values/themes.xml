<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Theme.ModernTetris" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/text_primary</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/text_primary</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnBackground">@color/text_primary</item>
        <item name="colorOnSurface">@color/text_primary</item>
        
        <!-- Error color -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/text_primary</item>
        
        <!-- Status bar and navigation -->
        <item name="android:statusBarColor">@color/status_bar</item>
        <item name="android:navigationBarColor">@color/navigation_bar</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
        
        <!-- Window background -->
        <item name="android:windowBackground">@color/background_dark</item>
        
        <!-- Font family -->
        <item name="android:fontFamily">@font/orbitron</item>
        <item name="fontFamily">@font/orbitron</item>
        
        <!-- Edge to edge -->
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:fitsSystemWindows">false</item>
        
        <!-- Animations -->
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowEnterTransition">@android:transition/fade</item>
        <item name="android:windowExitTransition">@android:transition/fade</item>
    </style>
    
    <!-- No action bar theme -->
    <style name="Theme.ModernTetris.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    
    <!-- Fullscreen theme for game -->
    <style name="Theme.ModernTetris.Fullscreen" parent="Theme.ModernTetris.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>
    
    <!-- Splash screen theme -->
    <style name="Theme.ModernTetris.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/background_dark</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.ModernTetris</item>
    </style>
    
    <!-- Dialog theme -->
    <style name="Theme.ModernTetris.Dialog" parent="Theme.Material3.DayNight.Dialog">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="android:windowBackground">@drawable/dialog_background</item>
        <item name="dialogCornerRadius">16dp</item>
    </style>
    
    <!-- Bottom sheet theme -->
    <style name="Theme.ModernTetris.BottomSheet" parent="Theme.Material3.DayNight.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>
    
    <style name="BottomSheetStyle" parent="Widget.Material3.BottomSheet">
        <item name="android:background">@drawable/bottom_sheet_background</item>
        <item name="shapeAppearance">@style/ShapeAppearance.ModernTetris.BottomSheet</item>
    </style>
    
    <!-- Shape appearances -->
    <style name="ShapeAppearance.ModernTetris.SmallComponent" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>
    
    <style name="ShapeAppearance.ModernTetris.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>
    
    <style name="ShapeAppearance.ModernTetris.LargeComponent" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
    
    <style name="ShapeAppearance.ModernTetris.BottomSheet" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeTopRight">16dp</item>
    </style>
    
    <!-- Text appearances -->
    <style name="TextAppearance.ModernTetris.DisplayLarge" parent="TextAppearance.Material3.DisplayLarge">
        <item name="android:fontFamily">@font/orbitron_bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="TextAppearance.ModernTetris.HeadlineLarge" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:fontFamily">@font/orbitron_bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="TextAppearance.ModernTetris.TitleLarge" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:fontFamily">@font/orbitron_medium</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="TextAppearance.ModernTetris.BodyLarge" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:fontFamily">@font/orbitron</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>
    
    <!-- Button styles -->
    <style name="Widget.ModernTetris.Button" parent="Widget.Material3.Button">
        <item name="android:fontFamily">@font/orbitron_bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/background_dark</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:minHeight">56dp</item>
    </style>
    
    <style name="Widget.ModernTetris.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:fontFamily">@font/orbitron_bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="strokeColor">@color/primary</item>
        <item name="android:textColor">@color/primary</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:minHeight">56dp</item>
    </style>
    
    <style name="Widget.ModernTetris.Button.Text" parent="Widget.Material3.Button.TextButton">
        <item name="android:fontFamily">@font/orbitron_medium</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:minHeight">48dp</item>
    </style>
    
    <!-- Card style -->
    <style name="Widget.ModernTetris.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/surface</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="contentPadding">16dp</item>
    </style>
    
    
    <!-- Neon glow text style -->
    <style name="TextAppearance.ModernTetris.NeonGlow">
        <item name="android:fontFamily">@font/orbitron_bold</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:shadowColor">@color/primary</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">20</item>
    </style>
    
    <!-- Game score text -->
    <style name="TextAppearance.ModernTetris.Score">
        <item name="android:fontFamily">@font/orbitron_bold</item>
        <item name="android:textColor">@color/accent_cyan</item>
        <item name="android:textSize">32sp</item>
        <item name="android:shadowColor">@color/accent_cyan</item>
        <item name="android:shadowRadius">10</item>
    </style>
</resources>